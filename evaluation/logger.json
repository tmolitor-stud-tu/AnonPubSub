{
	"version": 1,
	"disable_existing_loggers": false,
	
	"formatters": {
		"simple": {
			"format": "%(asctime)s [%(levelname)-7s] %(filename)s:%(lineno)03d: %(message)s",
			"color": true
		}
	},
	
	"handlers": {
		"stderr": {
			"class": "logging.StreamHandler",
			"level": "DEBUG",
			"formatter": "simple"
		},
		"ignore": {
			"class": "logging.NullHandler",
			"level": "DEBUG"
		}
	},
	
	"loggers": {
		"": {
			"level": "DEBUG",
			"handlers": ["stderr"]
		}
	}
}