{
	"version": 1,
	"disable_existing_loggers": false,
	
	"formatters": {
		"simple": {
			"format": "%(asctime)s [%(levelname)-7s] %(name)s {%(threadName)s} %(filename)s:%(lineno)d: %(message)s",
			"color": true
		}
	},
	
	"handlers": {
		"stderr": {
			"class": "logging.StreamHandler",
			"level": "DEBUG",
			"formatter": "simple"
		},
		"queue": {
			"class": "logging.handlers.QueueHandler",
			"level": "DEBUG",
			"formatter": "simple",
			"queue": "to be set later"
		},
		"ignore": {
			"class": "logging.NullHandler",
			"level": "DEBUG"
		}
	},
	
	"loggers": {
		"": {
			"level": "DEBUG",
			"handlers": ["stderr", "queue"]
		},
		"networking": {
			"level": "INFO"
		},
		"routing.router": {
			"level": "INFO"
		},
		"cherrypy.access": {
			"level": "DEBUG",
			"handlers": ["ignore"],
			"propagate": false
		}
	}
}