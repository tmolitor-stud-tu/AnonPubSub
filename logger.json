{
	"version": 1,
	"disable_existing_loggers": false,
	"formatters": {
		"simple": {
			"format": "%(asctime)s [%(levelname)-7s] %(name)s {%(threadName)s} %(filename)s:%(lineno)d: %(message)s"
		},
		"with_ip": {
			"format": "%(asctime)s [%(levelname)-7s] %(name)s@%(ip)s:%(port)d {%(threadName)s} %(filename)s:%(lineno)d: %(message)s"
		}
	},

	"handlers": {
		"stderr": {
			"class": "logging.StreamHandler",
			"level": "DEBUG",
			"formatter": "simple"
		}
	},

	"root": {
		"level": "DEBUG",
		"handlers": ["stderr"]
	}
}